<table class="table table-hover table-bordered">
                        <h3>Rented Books:</h3>
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">ISBN</th>
                                <th scope="col">Price</th>
                                <th scope="col">Return</th>
                            </tr>
                        </thead>
                        <tbody>
{{#each rentedBooks}}
                            <tr>
                                <th scope="row">{{book.bookName}}</th>
                                <td>{{book.isbn}}</td>
                                <td>${{book.rentalPrice}}</td>
                                <td>
                                    <div class="d-grid col-8 mx-auto">
                                        <button class="btn btn-danger return-book-btn" type="button" data-rental-id="{{this.id}}"><i class="fa-solid fa-arrow-right-to-bracket"></i></button>
                                    </div>
                                </td>
                            </tr>
{{/each}}
                    <!-- listings -->
                    {{!-- <h3>Listed Books:</h3> --}}
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">ISBN</th>
                                <th scope="col">Price</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <h3>Owned Books:</h3>
                        <tbody>
                            {{#each ownedBooks}}
                            <tr>
                                <th scope="row">{{bookName}}</th>
                                <td>{{isbn}}</td>
                                <td>${{rentalPrice}}</td>
                                <td>
                                    <div class="d-grid col-8 mx-auto">
                                        <button class="btn btn-danger" type="button"><i class="fa-solid fa-trash"></i></button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>