{{> format/rightSideOpen}}
                    <h2>Existing User?</h2>
                    <!-- sign up button -->
                    <div>
                        <a href="/login" class="btn btn-success" id="login-page-route">Login Here!</a>
                    </div>
                </div>
            </div>
        </section>
{{> format/rightSideClose}}

