<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book'n Borrow</title>
    <link rel="stylesheet" href="./style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/f44abfeecf.js" crossorigin="anonymous"></script>
</head>
<body>
    <div id="container">
        <section class="open-book">
            <div class="row justify-content-between">
                <div class="col-4">
                    <h1>Book'n Borrow</h1>
                </div>
                <!-- nav bar -->
                <div class="col-4">
                    <h6>
                        <ul class="nav justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Search</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About Us</a>
                            </li>
                        </ul>
                    </h6>
                </div>
            </div>
            <!-- {{!-- main webpage content --}} -->
            <div class="row justify-content-between">
                <!-- {{!-- column left side --}} -->
                <div class="col-5">
                    <h2>Sign Up:</h2>
                    <form>
                        <!-- first/last name input -->
                        <div class="row mb-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="First name" id="first-name">
                                </div>
                                <div class="col">
                                <input type="text" class="form-control" placeholder="Last name" id="last-name">
                                </div>
                            </div>
                            <!-- email -->
                            <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Email:</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3">
                            </div>
                            </div>
                            <!-- password -->
                            <div class="row mb-3">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Password:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="inputPassword3">
                            </div>
                            </div>
                            <!-- signup button -->
                            <div class="gap-2 col-3 mx-auto">
                                <button type="submit" class="btn btn-primary" id="login">Sign Up</button>
                            </div>
                        </form>
                </div>
                <!-- {{!-- column right side --}} -->
                <div class="col-4 ">
                    <h2>Existing User?</h2>
                    <!-- sign up button -->
                    <div>
                        <button type="submit" class="btn btn-success" id="login-page-route">Login Here!</button>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>
</body>
</html>